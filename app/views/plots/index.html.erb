<h1>Plots Index Page</h1>

<% @plots.each do |plot| %>
  <% plot.plants.each do |plant| %>
    <p>Plot Number: <%= plot.number %></p>
    <p>Plant Name: <%= plant.name %></p>
  <div id="plant-<%= plant.id %>">
  <%= link_to 'Remove', "/plots/#{plot.id}/plants/#{plant.id}", method: :delete %>
  </div>
  <% end %>
<% end %>

